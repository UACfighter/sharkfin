<h1>Комментарии</h1>
<table>
  <thead>
    <tr>
      <th>Пост</th>
      <th>Пользователь</th>
      <th>Содержимое</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.post.title %></td>
        <td><%= comment.user.name %></td>
        <td><%= comment.content %></td>
        <td><%= button_to 'Показать', comment, method: :get, form: { class: 'inline-button' } %></td>
        <td><%= button_to 'Изменить', edit_comment_path(comment), method: :get, form: { class: 'inline-button' } %></td>
        <td><%= button_to 'Удалить', comment, method: :delete, data: { confirm: 'Are you sure?' }, form: { class: 'inline-button' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= button_to 'Добавить комментарий', new_comment_path, method: :get, form: { class: 'inline-button' } %>
