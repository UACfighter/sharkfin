<h1>Профили</h1>
<table>
  <thead>
    <tr>
      <th>Пользователь</th>
      <th>Страна</th>
      <th>Описание</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user.name %></td>
        <td><%= profile.country&.name %></td>
        <td><%= profile.biography %></td>
        <td><%= button_to 'Показать', profile, method: :get, form: { class: 'inline-button' } %></td>
        <td><%= button_to 'Изменить', edit_profile_path(profile), method: :get, form: { class: 'inline-button' } %></td>
        <td><%= button_to 'Удалить', profile, method: :delete, data: { confirm: 'Are you sure?' }, form: { class: 'inline-button' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= button_to 'Добавить профиль', new_profile_path, method: :get, form: { class: 'inline-button' } %>
