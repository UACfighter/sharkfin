<h1>Profiles</h1>
<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Country</th>
      <th>Biography</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user.name %></td>
        <td><%= profile.country&.name %></td>
        <td><%= profile.biography %></td>
        <td><%= button_to 'Show', profile, method: :get, form: { class: 'inline-button' } %></td>
        <td><%= button_to 'Edit', edit_profile_path(profile), method: :get, form: { class: 'inline-button' } %></td>
        <td><%= button_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }, form: { class: 'inline-button' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= button_to 'New Profile', new_profile_path, method: :get, form: { class: 'inline-button' } %>
