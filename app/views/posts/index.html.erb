<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Category</th>
      <th>Status</th>
      <th>Tags</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.name %></td>
        <td><%= post.category&.name %></td>
        <td><%= post.status&.name %></td>
        <td><%= post.tags.map(&:name).join(", ") %></td>
        <td><%= button_to 'Show', post, method: :get, form: { class: 'inline-button' } %></td>
        <td><%= button_to 'Edit', edit_post_path(post), method: :get, form: { class: 'inline-button' } %></td>
        <td><%= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, form: { class: 'inline-button' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= button_to 'New Post', new_post_path, method: :get, form: { class: 'inline-button' } %>
