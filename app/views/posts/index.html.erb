<h1>Посты</h1>

<table>
  <thead>
    <tr>
      <th>Название</th>
      <th>Автор</th>
      <th>Категория</th>
      <th>Статус</th>
      <th>Тэги</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.user.name %></td>
        <td><%= post.category&.name %></td>
        <td><%= post.status&.name %></td>
        <td><%= post.tags.map(&:name).join(", ") %></td>
        <td><%= button_to 'Показать', post, method: :get, form: { class: 'inline-button' } %></td>
        <td><%= button_to 'Изменить', edit_post_path(post), method: :get, form: { class: 'inline-button' } %></td>
        <td><%= button_to 'Удалить', post, method: :delete, data: { confirm: 'Are you sure?' }, form: { class: 'inline-button' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= button_to 'Добавить пост', new_post_path, method: :get, form: { class: 'inline-button' } %>
