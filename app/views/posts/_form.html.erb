<%= form_with(model: @post, local: true) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id, "Author" %>
    <%= form.collection_select :user_id, User.all, :id, :name, prompt: "Select Author" %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.label :category_id, "Category" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, prompt: "Select Category" %>
  </div>

  <div class="field">
    <%= form.label :status_id, "Status" %>
    <%= form.collection_select :status_id, Status.all, :id, :name, prompt: "Select Status" %>
  </div>

  <div class="field">
    <%= form.label :tag_ids, "Tags" %>
    <%= form.collection_select :tag_ids, Tag.all, :id, :name, {}, { multiple: true } %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
