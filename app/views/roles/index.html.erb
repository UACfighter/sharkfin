<h1>Роли</h1>
<table>
  <thead>
    <tr>
      <th>Название</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= button_to 'Показать', role, method: :get, form: { class: 'inline-button' } %></td>
        <td><%= button_to 'Изменить', edit_role_path(role), method: :get, form: { class: 'inline-button' } %></td>
        <td><%= button_to 'Удалить', role, method: :delete, data: { confirm: 'Are you sure?' }, form: { class: 'inline-button' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= button_to 'Добавить роль', new_role_path, method: :get, form: { class: 'inline-button' } %>
